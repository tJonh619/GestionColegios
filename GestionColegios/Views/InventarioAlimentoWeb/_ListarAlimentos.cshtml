
@model GestionColegios.ViewModels.VMInventarioAlimento


<div class="container mt-4">
    <!-- Tarjeta principal -->
    <div class="card shadow-lg">
        <!-- Encabezado de la tarjeta -->
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">
                <i class="bi bi-box-seam me-2"></i>Lista de Alimentos
            </h3>
            <a href="@Url.Action("Create", "InventarioAlimentos")" class="btn btn-light">
                <i class="bi bi-plus-circle me-1"></i>Agregar Alimento
            </a>
        </div>

        <!-- Cuerpo de la tarjeta -->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="fs-5">Código</th>
                            <th scope="col" class="fs-5">Nombre del Alimento</th>
                            <th scope="col" class="fs-5">Stock</th>
                            <th scope="col" class="fs-5">Unidad de Medida</th>
                            <th scope="col" class="fs-5">Fecha de Reabastecimiento</th>
                            <th scope="col" class="fs-5">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.InventarioAlimentos != null && Model.InventarioAlimentos.Any())
                        {
                            foreach (var alimento in Model.InventarioAlimentos)
                            {
                                <tr>
                                    <td class="fs-5">@Html.DisplayFor(modelItem => alimento.Codigo)</td>
                                    <td class="fs-5">@Html.DisplayFor(modelItem => alimento.NombreAlimento)</td>
                                    <td class="fs-5">@Html.DisplayFor(modelItem => alimento.Stock)</td>
                                    <td class="fs-5">@Html.DisplayFor(modelItem => alimento.UnidadDeMedida)</td>
                                    <td class="fs-5">@Html.DisplayFor(modelItem => alimento.FechaModificacion)</td>
                                    <td class="fs-5">
                                        <a href="@Url.Action("Edit", "InventarioAlimentoWeb", new { id = alimento.Id })" class="btn btn-sm btn-warning me-2">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </a>
                                        <a href="@Url.Action("Delete", "InventarioAlimentoWeb", new { id = alimento.Id })" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que deseas desactivar este alimento?');">
                                            <i class="bi bi-x-circle"></i> Desactivar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center fs-5 text-muted">
                                    <i class="bi bi-info-circle me-2"></i>No hay alimentos registrados actualmente.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
