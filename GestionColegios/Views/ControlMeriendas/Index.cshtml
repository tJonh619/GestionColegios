@model GestionColegios.ViewModels.VMControlMerienda

@{
    Layout = Layout;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Control de Merienda</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .card {
            margin-bottom: 20px;
        }

        .table-responsive {
            margin-bottom: 20px;
        }

        .table-inventario {
            font-size: 0.9rem;
        }

            .table-inventario th, .table-inventario td {
                padding: 0.8rem;
                font-size: 0.85rem;
            }

                .table-inventario th:nth-child(1) {
                    width: 40%;
                }

                .table-inventario th:nth-child(2) {
                    width: 30%;
                }

                .table-inventario th:nth-child(3) {
                    width: 30%;
                }

        .form-control {
            border-radius: 0.375rem; /* Round corners for inputs */
        }

        .btn-custom {
            border-radius: 0.375rem;
        }

        .card-header h5 {
            font-weight: 600;
        }

        .row > .col-md-8, .row > .col-md-4 {
            padding: 15px;
        }

        .btn-add-row, .btn-delete-row {
            border-radius: 0.375rem;
        }

        .table thead th {
            background-color: #007bff;
            color: #fff;
            text-align: center;
        }

        .table tbody td {
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2 class="mt-4 mb-3 text-center text-primary">Control de Merienda</h2>

        <div class="row">
            <!-- Formulario de Registro de Meriendas -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5>Registro de Meriendas</h5>
                    </div>
                    <div class="card-body">
                        <form action="@Url.Action("Create", "ControlMeriendas")" method="post" id="form-tablas">
                            @Html.AntiForgeryToken()
                            <div id="tablas-container">
                                <div class="table-responsive" id="tabla-1">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Curso Académico</th>
                                                <th>Estudiante</th>
                                                <th>Código</th>
                                                <th>Fecha Entrega</th>
                                                <th>Asistencia Esperada Mujeres</th>
                                                <th>Asistencia Esperada Total</th>
                                                <th>Asistencia Real Mujeres</th>
                                                <th>Asistencia Real Total</th>
                                                <th>SAceite</th>
                                                <th>SArroz</th>
                                                <th>SCereal</th>
                                                <th>SFrijoles</th>
                                                <th>SMaiz</th>
                                                <th>Firma Docente</th>
                                                <th>Cédula Tutor</th>
                                                <th>Firma Tutor</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tabla-body">
                                            <tr>
                                                <td>@Html.DropDownList("CursoAcademicoId[]", new SelectList(Model.CursosAcademicos, "Id", "Nombre"), "Seleccione un Curso Académico", new { @class = "form-control" })</td>
                                                <td>@Html.DropDownList("EstudianteId[]", new SelectList(Model.Estudiantes, "Id", "Nombres"), "Seleccione un Estudiante", new { @class = "form-control" })</td>
                                                <td><input type="text" name="Codigo[]" class="form-control" /></td>
                                                <td><input type="date" name="FechaEntrega[]" class="form-control" /></td>
                                                <td><input type="number" name="AsistenciaEsperadaMujeres[]" class="form-control" /></td>
                                                <td><input type="number" name="AsistenciaEsperadaTotal[]" class="form-control" /></td>
                                                <td><input type="number" name="AsistenciaRealMujeres[]" class="form-control" /></td>
                                                <td><input type="number" name="AsistenciaRealTotal[]" class="form-control" /></td>
                                                <td><input type="number" name="SAceite[]" class="form-control" /></td>
                                                <td><input type="number" name="SArroz[]" class="form-control" /></td>
                                                <td><input type="number" name="SCereal[]" class="form-control" /></td>
                                                <td><input type="number" name="SFrijoles[]" class="form-control" /></td>
                                                <td><input type="number" name="SMaiz[]" class="form-control" /></td>
                                                <td><input type="text" name="FirmaDocente[]" class="form-control" /></td>
                                                <td><input type="text" name="CedulaTutor[]" class="form-control" /></td>
                                                <td><input type="text" name="FirmaTutor[]" class="form-control" /></td>
                                                <td><button type="button" class="btn btn-danger btn-delete-row">Eliminar</button></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <button type="button" class="btn btn-success btn-add-row mb-3">Agregar Fila</button>
                                </div>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary btn-custom">Guardar</button>
                                <a href="@Url.Action("Historico", "ControlMeriendas")" class="btn btn-info btn-custom">Historial de Control de Meriendas</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Inventario de Alimentos -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Inventario de Alimentos</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-inventario">
                            <thead>
                                <tr>
                                    <th>Nombre del Alimento</th>
                                    <th>Stock U</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.InventarioAlimentos != null && Model.InventarioAlimentos.Any())
                                {
                                    foreach (var alimento in Model.InventarioAlimentos)
                                    {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => alimento.NombreAlimento)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => alimento.Stock)
                                        
                                        @Html.DisplayFor(modelItem => alimento.UnidadDeMedida)
                                    </td>

                                </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center">No hay alimentos en el inventario.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script>
    $(document).ready(function () {
        // Función para agregar una nueva fila
        $(document).on('click', '.btn-add-row', function () {
            var nuevaFila = `
                <tr>
                    <td><select name="CursoAcademicoId[]" class="form-control">@foreach (var curso in Model.CursosAcademicos) { <option value="@curso.Id">@curso.Nombre</option> }</select></td>
                    <td><select name="EstudianteId[]" class="form-control">@foreach (var estudiante in Model.Estudiantes) { <option value="@estudiante.Id">@estudiante.Nombres</option> }</select></td>
                    <td><input type="text" name="Codigo[]" class="form-control" /></td>
                    <td><input type="date" name="FechaEntrega[]" class="form-control" /></td>
                    <td><input type="number" name="AsistenciaEsperadaMujeres[]" class="form-control" /></td>
                    <td><input type="number" name="AsistenciaEsperadaTotal[]" class="form-control" /></td>
                    <td><input type="number" name="AsistenciaRealMujeres[]" class="form-control" /></td>
                    <td><input type="number" name="AsistenciaRealTotal[]" class="form-control" /></td>
                    <td><input type="number" name="SAceite[]" class="form-control" /></td>
                    <td><input type="number" name="SArroz[]" class="form-control" /></td>
                    <td><input type="number" name="SCereal[]" class="form-control" /></td>
                    <td><input type="number" name="SFrijoles[]" class="form-control" /></td>
                    <td><input type="number" name="SMaiz[]" class="form-control" /></td>
                    <td><input type="text" name="FirmaDocente[]" class="form-control" /></td>
                    <td><input type="text" name="CedulaTutor[]" class="form-control" /></td>
                    <td><input type="text" name="FirmaTutor[]" class="form-control" /></td>
                    <td><button type="button" class="btn btn-danger btn-delete-row">Eliminar</button></td>
                </tr>`;

            $('#tabla-body').append(nuevaFila);
        });

        // Función para eliminar una fila
        $(document).on('click', '.btn-delete-row', function () {
            $(this).closest('tr').remove();
        });
    });
    </script>

</body>
</html>
