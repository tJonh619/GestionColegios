<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-0">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="@Url.Content("~/Content/images/logo.png")" width="30" height="30" alt="Logo" class="d-inline-block align-text-top"/>
            </a>
            <button class="btn btn-light ms-auto">Login</button>
        </div>
    </nav>

    <div class="container-fluid p-0">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse vh-100">
                <div class="position-sticky">
                    <ul class="nav flex-column">

                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-chalkboard-teacher"></i>
                                Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Index", "MaestrosWeb")">
                                <i class="fas fa-chalkboard-teacher"></i>
                                Docentes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Index", "EstudianteWeb")">
                                <i class="fas fa-user-graduate"></i>
                                Estudiantes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Index", "UsuarioWeb")">
                                <i class="fas fa-box"></i>
                                Usuarios
                            </a>
                        </li>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">
                                <i class="fas fa-box"></i>
                                Inventario Alimentos
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">
                                <i class="fas fa-utensils"></i>
                                Merienda Escolar
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Contenido principal -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>