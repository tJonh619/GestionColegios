<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-0">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="@Url.Content("~/Content/images/logo.png")" width="30" height="30" alt="Logo" class="d-inline-block align-text-top"/>
            </a>
            <button class="btn btn-light ms-auto">Login</button>
        </div>
    </nav>

    <div class="container-fluid p-0">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse vh-100">
    <div class="position-sticky">
        <!-- Perfil del usuario (opcional) -->
        <div class="user-profile text-center py-4">
            <img src="https://via.placeholder.com/50" alt="Usuario" class="rounded-circle" width="50" height="50">
            <h6 class="text-white mt-2">Jonathan Torrez</h6>
        </div>

        <!-- Menú lateral -->
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-white" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-chalkboard-teacher me-2"></i> Inicio
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="@Url.Action("Index", "MaestrosWeb")">
                    <i class="fas fa-chalkboard-teacher me-2"></i> Docentes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="@Url.Action("Index", "EstudianteWeb")">
                    <i class="fas fa-user-graduate me-2"></i> Estudiantes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="@Url.Action("Index", "UsuarioWeb")">
                    <i class="fas fa-users-cog me-2"></i> Usuarios
                </a>
            </li>

            <li class="nav-item">

                <a class="nav-link text-white" href="@Url.Action("Index", "AñoAcademicoWeb")">
                    <i class="fas fa-users-cog me-2"></i> Años Academicos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="@Url.Action("Index", "InventarioAlimentoWeb")">
                    <i class="fas fa-box me-2"></i> Inventario Alimentos

                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-white" href="#">
                    <i class="fas fa-utensils me-2"></i> Merienda Escolar
                </a>
            </li>
        </ul>
    </div>
</nav>

            <!-- Contenido principal -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>