@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-0">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="@Url.Content("~/Content/images/logo.png")" width="30" height="30" alt="Logo" class="d-inline-block align-text-top" />
                </a>

                <!-- Espacio para el botón de Cerrar sesión -->
                <div class="ms-auto">
                    <button class="btn btn-light btn-logout" type="button" onclick="document.getElementById('logoutForm').submit();">
                        <i class="fas fa-sign-out-alt me-2"></i> Cerrar sesión
                    </button>
                </div>
            </div>
        </nav>
    }
}
else
{
    <div class="navbar-nav navbar-right">
        <button class="login-btn btn btn-light">Iniciar sesión</button>
    </div>
}

<style>
    /* Barra de navegación */
    .navbar {
        background-color: #007bff; /* Color de fondo de la barra */
    }

    /* Botón de cerrar sesión */
    .btn-logout {
        font-size: 16px;
        font-weight: 500;
        padding: 8px 20px;
        border-radius: 25px; /* Bordes redondeados */
        background-color: #f8f9fa;
        color: #007bff;
        border: 1px solid #007bff;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-logout:hover {
            background-color: #007bff;
            color: white;
            cursor: pointer;
        }

    /* Añadir un poco de espacio entre los elementos de la navbar */
    .navbar-nav .ms-auto {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-left: auto;
    }

    /* Botón de login si el usuario no está autenticado */
    .login-btn {
        font-size: 16px;
        font-weight: 500;
        padding: 8px 20px;
        border-radius: 25px;
        background-color: #007bff;
        color: white;
        border: none;
        transition: background-color 0.3s ease;
    }

        .login-btn:hover {
            background-color: #0056b3;
            cursor: pointer;
        }

    /* Icono del botón de cierre de sesión */
    .btn-logout i {
        font-size: 18px;
    }

    /* Asegurarse de que el contenido de la navbar esté alineado a la derecha */
    .container-fluid {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
 </style >
