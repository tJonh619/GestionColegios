@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-0">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="@Url.Content("~/Content/images/logo.png")" width="30" height="30" alt="Logo" class="d-inline-block align-text-top" />
            </a>
            <div class="ms-auto">
                <button class="login-btn" type="button" onclick="document.getElementById('logoutForm').submit();">Cerrar sesión</button>
            </div>
    </div>
</nav>
    }
}
else
{
    <div class="navbar-nav navbar-right">
        <button class="login-btn">Inicia sesion</button>
    </div>
}