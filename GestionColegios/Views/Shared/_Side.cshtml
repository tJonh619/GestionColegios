@using System.Security.Claims
@{
    var claimsIdentity = User.Identity as ClaimsIdentity;
    var nombreUsuario = claimsIdentity?.FindFirst(ClaimTypes.Name)?.Value;
    var rolUsuario = claimsIdentity?.FindFirst(ClaimTypes.Role)?.Value;
    var idUsuario = claimsIdentity?.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}
<div class="side-bar overflow-auto">

    <div id="close-btn">
        <i class="fas fa-times"></i>
    </div>

    <div class="profile">
        <img src="~/Content/Recursos/pic-3.jpg" class="image" alt="">
        <h3 class="name">@nombreUsuario</h3>
        <p class="role">@rolUsuario</p>
        <a href=@Url.Action("~/Views/Shared/Profile.cshtml") class="boton">Ver Perfil</a>
    </div>

    <nav class="navbarr">
        <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i><span>Inicio</span></a>
        @if (rolUsuario != null && (rolUsuario.ToString() == "Administrador" || rolUsuario.ToString() == "Director"))
        {
            <a href="@Url.Action("Index", "UsuarioWeb")"><i class="fas fa-users-cog"></i>Usuarios</a>
            <a href="@Url.Action("Index", "MaestrosWeb")"><i class="fas fa-chalkboard-user"></i><span>Docentes</span></a>
            <a href="@Url.Action("Index", "EstudianteWeb")"><i class="fas fa-user-graduate"></i><span>Estudiantes</span></a>
            <a href="@Url.Action("Index", "AñoAcademicoWeb")"><i class="fas fa-calendar"></i><span>Grados</span></a>
            <a href="@Url.Action("Index", "InventarioAlimentoWeb")"><i class="fas fa-box"></i><span>Inventario</span></a>
            <a href="@Url.Action("Index", "PeriodoWeb")"><i class="fas fa-calendar-alt"></i><span>Años y Periodos</span></a>
            <a href="@Url.Action("Index", "ControlMeriendas")"><i class="fas fa-cookie-bite"></i><span>Control de Meriendas</span></a>
            <a href="@Url.Action("Index", "CursoAcademicoWeb")"><i class="fas fa-graduation-cap"></i><span>Cursos Academicos</span></a>
            <a href="@Url.Action("Index", "SeccionWeb")"><i class="fas fa-layer-group"></i><span>Secciones</span></a>
            <a href="@Url.Action("Index", "MateriaWeb")"><i class="fas fa-book"></i><span>Materias</span></a>
            <a href="@Url.Action("GestionAcademica", "CalificacionWeb")"><i class="fas fa-ratings"></i><span>Calificaciones</span></a>
        }
    </nav>
</div>