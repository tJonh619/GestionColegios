@using System.Security.Claims
@{
    var claimsIdentity = User.Identity as ClaimsIdentity;
    var nombreUsuario = claimsIdentity?.FindFirst(ClaimTypes.Name)?.Value;
    var rolUsuario = claimsIdentity?.FindFirst(ClaimTypes.Role)?.Value;
    var idUsuario = claimsIdentity?.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}
<head>
    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>

<nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse vh-100">
    <div class="position-sticky vh-100 custom-scrollbar">
        <!-- Perfil del usuario (opcional) -->
        <div class="user-profile text-center py-4">
            <img src="https://via.placeholder.com/50" alt="Usuario" class="rounded-circle" width="50" height="50">



            <h6 class="text-white mt-2">@nombreUsuario</h6>
        </div>

        <!-- Menú lateral -->
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-white bg-dark-hover" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-home me-2"></i> Inicio
                </a>
            </li>

            <!-- Mostrar solo a Administradores y Directores -->
            @if (rolUsuario != null && (rolUsuario.ToString() == "Administrador" || rolUsuario.ToString() == "Director"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "MaestrosWeb")">
                        <i class="fas fa-chalkboard-teacher me-2"></i> Docentes
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "EstudianteWeb")">
                        <i class="fas fa-user-graduate me-2"></i> Estudiantes
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "UsuarioWeb")">
                        <i class="fas fa-users-cog me-2"></i> Usuarios
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "AñoAcademicoWeb")">
                        <i class="fas fa-calendar me-2"></i> Años Académicos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "InventarioAlimentoWeb")">
                        <i class="fas fa-box me-2"></i> Inventario Alimentos
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "PeriodoWeb")">
                        <i class="fas fa-calendar-alt me-2"></i> Periodo/Año
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("ImprimirMatricula", "Matriculas")">
                        <i class="fas fa-file-alt me-2"></i> Imprimir Hojas de matriculas
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "ControlMeriendas")">
                        <i class="fas fa-cookie-bite me-2"></i> Control Meriendas
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "CursoAcademicoWeb")">
                        <i class="fas fa-graduation-cap me-2"></i> Cursos Academicos
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "SeccionWeb")">
                        <i class="fas fa-layer-group me-2"></i> Sección
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "MateriaWeb")">
                        <i class="fas fa-book me-2"></i> Materias
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "CalificacionWeb")">
                        <i class="fas fa-pen me-2"></i> Calificaciones
                    </a>
                </li>
            }

            @if (rolUsuario != null && (rolUsuario.ToString() == "Docente"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Matriculas")">
                        <i class="fas fa-file-alt me-2"></i> Matriculas
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("Index", "ControlMeriendas")">
                        <i class="fas fa-cookie-bite me-2"></i> Control Meriendas
                    </a>
                </li>
            }
        </ul>
    </div>
</nav>

<!-- Estilo CSS -->
<style>
    /* Cambiar el color de fondo al pasar el ratón */
    .nav-link:hover {
        background-color: #007bff; /* Azul */
        color: white !important; /* Asegurar que el texto sea blanco */
    }

    .nav-link i {
        margin-right: 10px; /* Espacio entre el ícono y el texto */
    }
</style>




