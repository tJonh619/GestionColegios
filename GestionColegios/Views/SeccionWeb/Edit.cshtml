@model GestionColegios.ViewModels.VMSeccion

@{
    ViewBag.Title = "Editar Sección";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "SeccionWeb", FormMethod.Post, new { @id = "form-seccion" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre)
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CapacidadEstudiantes)
        @Html.TextBoxFor(model => model.CapacidadEstudiantes, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(model => model.CapacidadEstudiantes, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Activo)
        @Html.CheckBoxFor(model => model.Activo)
    </div>

    <button type="submit" class="btn btn-primary">
        @(Model.Id == 0 ? "Registrar" : "Guardar Cambios")
    </button>
    <button type="button" class="btn btn-secondary" onclick="window.history.back()">Cancelar</button>
}
