@model GestionColegios.ViewModels.VMSeccion

<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm(ViewBag.EsEdicion ?? false ? "Edit" : "Create", "SeccionWeb", FormMethod.Post, new { @id = "form-seccion" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- Tarjeta de Información de la Sección -->
                    <div class="col-md-6">
                        <div class="card shadow border-0">
                            <div class="card-header bg-primary text-white fs-5">
                                <label class="m-md-1">
                                    <i class="fa fa-cogs me-2" aria-hidden="true"></i> Información de la Sección
                                </label>
                            </div>

                            <div class="card-body">
                                <!-- Nombre de la Sección -->
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Nombre, "Nombre de la Sección", new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.Nombre,
                                        new { @class = "form-control fs-5", placeholder = "Ingrese el nombre de la sección" })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>

                                <!-- Capacidad de Estudiantes -->
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.CapacidadEstudiantes, "Capacidad de Estudiantes", new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.CapacidadEstudiantes,
                                        new { @class = "form-control fs-5", type = "number" })
                                    @Html.ValidationMessageFor(model => model.CapacidadEstudiantes, "", new { @class = "text-danger" })
                                </div>

                                <!-- Fecha de Modificación -->
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.FechaModificacion, "Fecha de Modificación", new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.FechaModificacion, "{0:yyyy-MM-dd}",
                                        new { @class = "form-control fs-5", type = "date" })
                                    @Html.ValidationMessageFor(model => model.FechaModificacion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="card-footer text-center fs-5">
                                <!-- Botón Guardar/Registrar dependiendo del estado -->
                                <button type="submit" class="btn btn-primary m-1">
                                    @(Model.Id == 0 ? "Registrar" : "Guardar Cambios")
                                </button>

                                <!-- Botón Cancelar -->
                                <button type="button" class="btn btn-secondary m-1" onclick="window.history.back()">Cancelar</button>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

