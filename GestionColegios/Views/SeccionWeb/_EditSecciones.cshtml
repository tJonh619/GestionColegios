@model GestionColegios.Models.Seccion

@{
    ViewBag.Title = "Editar Sección";
}

<h2>Editar Sección</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre)
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CapacidadEstudiantes)
        @Html.TextBoxFor(model => model.CapacidadEstudiantes, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(model => model.CapacidadEstudiantes, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Activo)
        @Html.CheckBoxFor(model => model.Activo)
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
}

