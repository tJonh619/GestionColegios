@model GestionColegios.ViewModels.VMUsuario

<div class="card mt-3 shadow">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title mb-0">Lista de Roles</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="fs-5">@Html.DisplayNameFor(model => model.Roles.First().Nombre)</th>
                        <th class="fs-5">@Html.DisplayNameFor(model => model.Roles.First().Descripcion)</th>
                        <th class="fs-5">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rol in Model.Roles)
                    {
                        <tr>
                            <td class="fs-5">@Html.DisplayFor(modelItem => rol.Nombre)</td>
                            <td class="fs-5">@Html.DisplayFor(modelItem => rol.Descripcion)</td>
                            <td class="fs-5">
                                <a href="@Url.Action("EditRole", new { id = rol.Id })" class="btn btn-sm btn-warning me-2">
                                    <i class="bi bi-pencil-square"></i> <span class="fs-5">Detalles</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>