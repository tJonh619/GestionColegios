@model GestionColegios.ViewModels.VMUsuario

@{
    ViewBag.Title = "Editar Usuario";
}

<h2>Editar Usuario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Campo oculto para el ID del Usuario -->
    @Html.HiddenFor(model => model.Usuario.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Usuario.NombreUsuario)
        @Html.EditorFor(model => model.Usuario.NombreUsuario, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Usuario.NombreUsuario, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Usuario.ClaveHash)
        @Html.EditorFor(model => model.Usuario.ClaveHash, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Usuario.ClaveHash, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Usuario.CorreoRecuperacion)
        @Html.EditorFor(model => model.Usuario.CorreoRecuperacion, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Usuario.CorreoRecuperacion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Usuario.RolId, "Rol")
        @Html.DropDownListFor(model => model.Usuario.RolId, new SelectList(Model.Roles, "Id", "Nombre", Model.Usuario.RolId), "Seleccionar Rol", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Usuario.RolId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Usuario.Activo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.Usuario.Activo)
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>
