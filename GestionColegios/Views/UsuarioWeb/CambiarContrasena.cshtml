@model GestionColegios.Models.Usuario

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cambiar Contraseña</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Cambiar Contraseña</h3>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("CambiarContrasena", "UsuarioWeb", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            @Html.HiddenFor(m => m.Id) <!-- Para enviar el ID del usuario al controlador -->

                            <div class="form-group">
                                @Html.LabelFor(m => m.ClaveHash, "Nueva Contraseña")
                                @Html.PasswordFor(m => m.ClaveHash, new { @class = "form-control", placeholder = "Nueva contraseña" })
                                @Html.ValidationMessageFor(m => m.ClaveHash, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Confirmar Contraseña")
                                <input type="password" class="form-control" name="ConfirmarContrasena" placeholder="Confirmar contraseña" />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Cambiar Contraseña</button>
                        }
                    </div>
                    <div class="card-footer text-center">
                        <small><a href="@Url.Action("Login", "UsuarioWeb")">Regresar al inicio de sesión</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
