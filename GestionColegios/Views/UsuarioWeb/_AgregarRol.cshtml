
@model GestionColegios.ViewModels.VMUsuario

<div class="panel panel-default mt-2">
    <div class="panel-heading">
        <h3 class="panel-title">Agregar Rol</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("CreateRole", "UsuarioWeb", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Rol.Nombre, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Rol.Nombre, new { @class = "form-control", required = "required", title = "Introduce el nombre del rol" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Rol.Descripcion, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Rol.Descripcion, new { @class = "form-control", required = "required", title = "Introduce una descripción del rol" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Agregar Rol" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>
