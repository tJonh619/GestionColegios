@model GestionColegios.ViewModels.VMUsuario

<div class="panel panel-default mt-2">
    <div class="panel-heading bg-primary text-white">
        <h3 class="panel-title p-2">
            <i class="fa fa-user-tag mr-2"></i>
            @(ViewBag.EsEdicion ? "Editar Rol" : "Agregar Rol")
        </h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm(ViewBag.EsEdicion ? "EditRole" : "CreateRole", "UsuarioWeb", FormMethod.Post,
                               new { @class = "form-horizontal", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Rol.Id) <!-- Campo oculto para el Id -->

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Rol.Nombre, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Rol.Nombre, new
                    {
                        @class = "form-control",
                        placeholder = "Introduce el nombre del rol",
                        required = "required",
                        @readonly = ViewBag.EsEdicion ? "readonly" : null
                    })
                    @Html.ValidationMessageFor(m => m.Rol.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Rol.Descripcion, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Rol.Descripcion, new
                    {
                        @class = "form-control",
                        placeholder = "Introduce una descripción del rol",
                        required = "required",
                        @readonly = ViewBag.EsEdicion ? "readonly" : null
                    })
                    @Html.ValidationMessageFor(m => m.Rol.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <!-- Botón Editar -->
                    <button type="button" id="btn-edit" class="btn btn-sm btn-success m-1"
                            style="@(ViewBag.EsEdicion ? "" : "display:none;")"
                            onclick="activateEdit()">
                        Editar
                    </button>

                    <!-- Botón Guardar Cambios -->
                    <button type="submit" id="btn-save" class="btn btn-primary m-1"
                            style="@(ViewBag.EsEdicion ? "display:none;" : "")">
                        @(Model.Rol.Id == 0 ? "Registrar" : "Guardar Cambios")
                    </button>

                    <!-- Botón Eliminar (solo en edición) -->
                    @if (ViewBag.EsEdicion)
                    {
                        <button type="button" id="btn-delete" class="btn btn-sm btn-danger m-1"
                                onclick="deleteRecord()">
                            Eliminar
                        </button>
                    }

                    <!-- Botón Cancelar/Regresar -->
                    <button type="button" id="btn-cancel-edit" class="btn btn-sm btn-secondary m-1"
                            onclick="cancelOrReturn()">
                        Regresar
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function activateEdit() {
            $('input').prop('readonly', false);  // Habilita los campos
            $('#btn-save').show();  // Muestra el botón Guardar
            $('#btn-cancel-edit').text("Cancelar");  // Cambia el texto del botón
            $('#btn-edit').hide();  // Oculta el botón Editar
            $('#btn-delete').hide();  // Oculta el botón Eliminar
        }

        function cancelOrReturn() {
            if ($('#btn-cancel-edit').text() === "Cancelar") {
                $('input').prop('readonly', true);  // Vuelve los campos a solo lectura
                $('#btn-save').hide();  // Oculta el botón Guardar
                $('#btn-edit').show();  // Muestra el botón Editar
                $('#btn-cancel-edit').text("Regresar");  // Cambia el texto a Regresar
                $('#btn-delete').show();  // Muestra el botón Eliminar
            } else {
                window.location.href = '@Url.Action("Index", "UsuarioWeb")';  // Redirige a la página principal
            }
        }

        function deleteRecord() {
            const deleteUrl = '@Url.Action("DeleteRole", "UsuarioWeb", new { id = Model.Rol.Id })';
            if (confirm("¿Estás seguro de que deseas eliminar este rol?")) {
                window.location.href = deleteUrl;
            }
        }
    </script>
}
