@model GestionColegios.ViewModels.VMUsuario

<div class="card mt-3 shadow">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title mb-0">Lista de Permisos</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="fs-5">@Html.DisplayNameFor(model => model.Permisos.First().Nombre)</th>
                        <th class="fs-5">@Html.DisplayNameFor(model => model.Permisos.First().Descripcion)</th>
                        <th class="fs-5">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var permiso in Model.Permisos)
                    {
                        <tr>
                            <td class="fs-5">@Html.DisplayFor(modelItem => permiso.Nombre)</td>
                            <td class="fs-5">@Html.DisplayFor(modelItem => permiso.Descripcion)</td>
                            <td class="fs-5">
                                <a href="@Url.Action("EditPermiso", new { id = permiso.Id })" class="btn btn-sm btn-warning me-2">
                                    <i class="bi bi-pencil-square"></i> <span class="fs-5">Detalles</span>
                                </a>
                                <a href="@Url.Action("DeletePermiso", new { id = permiso.Id })" class="btn btn-sm btn-danger px-4 py-2" onclick="return confirm('¿Estás seguro de que deseas eliminar este permiso?');">
                                    <i class="bi bi-trash3-fill"></i> <span class="fs-5">Desactivar</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
