@model GestionColegios.ViewModels.VMEstudiantes

@{
    ViewBag.Title = "_List";
}

<div class="card mt-3 shadow">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title mb-0">Lista de Estudiantes</h3>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-group">
                <label for="searchType" class="fs-5">Buscar por:</label>
                <select id="searchType" class="form-select">
                    <option value="nombres">Nombre Estudiante</option>
                    <option value="apellidos">Apellido Estudiante</option>
                    <option value="codigo">Código Estudiante</option>
                    <option value="direccion">Dirección</option>
                </select>
            </div>

            <div class="form-group">
                <input type="text" id="search" class="form-control" placeholder="Buscar...">
            </div>

            <div id="spinner" class="spinner-border text-primary" role="status" style="display: none;">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="fs-5">Código</th>
                        <th scope="col" class="fs-5">Nombres</th>
                        <th scope="col" class="fs-5">Apellidos</th>
                        <th scope="col" class="fs-5">Edad</th>
                        <th scope="col" class="fs-5">Sexo</th>
                        <th scope="col" class="fs-5">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @foreach (var estudiante in Model.Estudiantes)
                    {
                        <tr>
                            <td class="fs-5">@estudiante.CodigoEstudiante</td>
                            <td class="fs-5">@estudiante.Nombres</td>
                            <td class="fs-5">@estudiante.Apellidos</td>
                            <td class="fs-5">@estudiante.Edad</td>
                            <td class="fs-5">@estudiante.Sexo</td>
                            <td class="fs-5">
                                <a href="@Url.Action("Edit", "EstudianteWeb", new { id = estudiante.Id })" class="btn btn-sm btn-warning me-2">
                                    <i class="bi bi-pencil-square"></i> Detalles
                                </a>
                                <a href="@Url.Action("Create", "Matriculas", new { estudianteId = estudiante.Id, tutorId = Model.Tutor?.Id })" class="btn btn-sm btn-success me-2">
                                    <i class="bi bi-plus-square-fill"></i> Matricular
                                </a>
                                <a href="@Url.Action("Historial", "Matriculas", new { estudianteId = estudiante.Id })" class="btn btn-sm btn-primary">
                                    <i class="bi bi-folder-fill"></i> Historial de Matrículas
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>