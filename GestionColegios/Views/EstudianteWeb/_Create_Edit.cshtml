@model GestionColegios.ViewModels.VMEstudiantes

@{
    var esSoloLectura = ViewBag.EsEdicion
        ? new Dictionary<string, object> { { "readonly", "readonly" }, { "disabled", "disabled" } }
        : new Dictionary<string, object>();
}

@functions {
    IDictionary<string, object> ObtenerAtributos(Dictionary<string, object> atributosBase, Dictionary<string, object> soloLectura)
    {
        return atributosBase.Concat(soloLectura).ToDictionary(k => k.Key, v => v.Value);
    }
}
<div class="container mt-3">
    @using (Html.BeginForm(ViewBag.EsEdicion ? "Edit" : "Create", "EstudianteWeb", FormMethod.Post, new { @id = "form-estudiante" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Estudiante.Id)

        <!-- Card Principal -->
    <div class="card shadow border-0">
        <!-- Cabecera de la Card Principal -->
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="fa fa-user me-2"></i>
                Información del Estudiante y Tutor
            </h3>
        </div>

        <div class="card-body">
            <div class="row">
                <!-- Card de Información Personal del Estudiante -->
                <div class="col-md-6">
                    <div class="card shadow border-0">
                        <div class="card-header bg-secondary text-white">
                            <h4 class="card-title mb-0">
                                <i class="fa fa-info-circle me-2"></i>
                                Información Personal
                            </h4>
                        </div>
                        <div class="card-body fs-3">
                            <!-- Código Estudiantil -->
                            <div class="mb-3">
                                <label for="CodigoEstudiantil" class="form-label">Código Estudiantil</label>
                                @Html.TextBoxFor(model => model.Estudiante.CodigoEstudiante, new
                                {
                                    @class = "form-control fs-5",
                                    @placeholder = "Ingrese el código de estudiante",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Estudiante.CodigoEstudiante, "", new { @class = "text-danger" })
                            </div>

                            <!-- Nombres -->
                            <div class="mb-3">
                                <label for="Nombres" class="form-label">Nombres</label>
                                @Html.TextBoxFor(model => model.Estudiante.Nombres, new
                                {
                                    @class = "form-control fs-5",
                                    @placeholder = "Ingrese los nombres",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Estudiante.Nombres, "", new { @class = "text-danger" })
                            </div>

                            <!-- Apellidos -->
                            <div class="mb-3">
                                <label for="Apellidos" class="form-label">Apellidos</label>
                                @Html.TextBoxFor(model => model.Estudiante.Apellidos, new
                                {
                                    @class = "form-control fs-5",
                                    @placeholder = "Ingrese los apellidos",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Estudiante.Apellidos, "", new { @class = "text-danger" })
                            </div>

                            <!-- Fecha de Nacimiento -->
                            <div class="mb-3">
                                <label for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                                @Html.TextBoxFor(model => model.Estudiante.FechaNacimiento, "{0:yyyy-MM-dd}", new
                                {
                                    @class = "form-control fs-5",
                                    @type = "date",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Estudiante.FechaNacimiento, "", new { @class = "text-danger" })
                            </div>

                            <!-- Barrio -->
                            <div class="mb-3">
                                <label for="Barrio" class="form-label">Barrio</label>
                                @Html.TextBoxFor(model => model.Estudiante.Barrio, new
                                {
                                    @class = "form-control fs-5",
                                    @placeholder = "Ingrese el barrio",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Estudiante.Barrio, "", new { @class = "text-danger" })
                            </div>

                            <!-- Sexo -->
                            <div class="mb-3">
                                <label for="Sexo" class="form-label">Sexo</label>
                                @Html.DropDownListFor(model => model.Estudiante.Sexo, new SelectList(new List<string> { "Masculino", "Femenino" }), "Seleccione el sexo", new
                                {
                                    @class = "form-select fs-5",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Estudiante.Sexo, "", new { @class = "text-danger" })
                            </div>

                            <!-- Dirección -->
                            <div class="mb-3">
                                <label for="Direccion" class="form-label">Dirección</label>
                                @Html.TextBoxFor(model => model.Estudiante.Direccion, new
                                {
                                    @class = "form-control fs-5",
                                    @placeholder = "Ingrese la dirección",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Estudiante.Direccion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card de Información del Tutor -->
                <div class="col-md-6">
                    <div class="card shadow border-0">
                        <div class="card-header bg-secondary text-white">
                            <h4 class="card-title mb-0">
                                <i class="fa fa-user-friends me-2"></i>
                                Información del Tutor
                            </h4>
                        </div>
                        <div class="card-body fs-3">
                            <!-- Nombres del Tutor -->
                            <div class="mb-3">
                                <label for="TutorNombres" class="form-label">Nombres del Tutor</label>
                                @Html.TextBoxFor(model => model.Tutor.Nombres, new
                                {
                                    @class = "form-control fs-5",
                                    @placeholder = "Ingrese los nombres del tutor",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Tutor.Nombres, "", new { @class = "text-danger" })
                            </div>

                            <!-- Apellidos del Tutor -->
                            <div class="mb-3">
                                <label for="TutorApellidos" class="form-label">Apellidos del Tutor</label>
                                @Html.TextBoxFor(model => model.Tutor.Apellidos, new
                                {
                                    @class = "form-control fs-5",
                                    @placeholder = "Ingrese los apellidos del tutor",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Tutor.Apellidos, "", new { @class = "text-danger" })
                            </div>

                            <!-- Cédula del Tutor -->
                            <div class="mb-3">
                                <label for="TutorCedula" class="form-label">Cédula del Tutor</label>
                                @Html.TextBoxFor(model => model.Tutor.Cedula, new
                                {
                                    @class = "form-control fs-5",
                                    @placeholder = "Ingrese la cédula del tutor",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Tutor.Cedula, "", new { @class = "text-danger" })
                            </div>

                            <!-- Relación con el Estudiante -->
                            <div class="mb-3">
                                <label for="TutorRelacion" class="form-label">Relación con el Estudiante</label>
                                @Html.TextBoxFor(model => model.Tutor.RelacionConElEstudiante, new
                                {
                                    @class = "form-control fs-5",
                                    @placeholder = "Ingrese la relación con el estudiante",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Tutor.RelacionConElEstudiante, "", new { @class = "text-danger" })
                            </div>

                            <!-- Dirección del Tutor -->
                            <div class="mb-3">
                                <label for="TutorDireccion" class="form-label">Dirección del Tutor</label>
                                @Html.TextBoxFor(model => model.Tutor.Direccion, new
                                {
                                    @class = "form-control fs-5",
                                    @placeholder = "Ingrese la dirección del tutor",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Tutor.Direccion, "", new { @class = "text-danger" })
                            </div>

                            <!-- Celular del Tutor -->
                            <div class="mb-3">
                                <label for="TutorCelular" class="form-label">Celular del Tutor</label>
                                @Html.TextBoxFor(model => model.Tutor.Celular, new
                                {
                                    @class = "form-control fs-5",
                                    @placeholder = "Ingrese el celular del tutor",
                                    @required = "required"
                                })
                                @Html.ValidationMessageFor(model => model.Tutor.Celular, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

        <!-- Botones de acción -->
        <div class="card-footer mt-3 text-center fs-4">
            <button type="submit" id="btn-save" class="btn btn-primary me-2"
                    style="@(ViewBag.EsEdicion ? "display:none;" : "")">
                <i class="fa fa-save me-1"></i> @(Model.Estudiante.Id == 0 ? "Registrar" : "Guardar Cambios")
            </button>

            @if (ViewBag.EsEdicion)
            {
                <button type="button" id="btn-delete" class="btn btn-danger me-2" onclick="deleteRecord()">
                    <i class="fa fa-trash-alt me-1"></i> Eliminar
                </button>
            }

            <!-- Botón de cancelar edición -->
            <a href="@Url.Action("Index", "AñoAcademicoWeb")" class="btn btn-secondary">
                <i class="fa fa-arrow-left me-1"></i> Cancelar
            </a>
        </div>
    </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    function activateEdit() {
        $('input, select').each(function () {
            $(this).prop('readonly', false);
            $(this).prop('disabled', false);
        });
        $('#btn-save').show();
        $('#btn-cancel-edit').text("Cancelar");
        $('#btn-edit').hide();
        $('#btn-delete').hide();
    }

    function cancelOrReturn() {
        if ($('#btn-cancel-edit').text() === "Cancelar") {
            $('input, select').each(function () {
                $(this).prop('readonly', true);
                $(this).prop('disabled', true);
            });
            $('#btn-save').hide();
            $('#btn-edit').show();
            $('#btn-cancel-edit').text("Regresar");
            $('#btn-delete').show();
        } else {
            window.location.href = '@Url.Action("Index", "EstudianteWeb")';
        }
    }

    function deleteRecord() {
        const deleteUrl = '@Url.Action("Delete", "EstudianteWeb", new { id = Model.Estudiante.Id })';
        if (confirm("¿Estás seguro de que deseas eliminar este Estudiante?")) {
            window.location.href = deleteUrl;
        }
    }
</script>