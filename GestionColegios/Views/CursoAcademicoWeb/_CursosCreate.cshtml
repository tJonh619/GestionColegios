@model GestionColegios.ViewModels.VMCursoAcademico.VMCursosAcademicos

<div class="row mt-2">
    <div class="col-md-12">
        @using (Html.BeginForm("Create", "CursoAcademicoWeb", FormMethod.Post, new { @id = "form-curso" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.CursoAcademico.Id)

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="Nombre">Nombre del Curso</label>
                        @Html.TextBoxFor(model => model.CursoAcademico.Nombre, new { @class = "form-control", placeholder = "Ingrese el nombre del curso", required = "required" })
                        @Html.ValidationMessageFor(model => model.CursoAcademico.Nombre, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="AñoAcademicoId">Año Académico</label>
                        @Html.DropDownListFor(model => model.CursoAcademico.AñoAcademicoId, new SelectList(Model.AñosAcademicos, "Id", "Nombre"), "Seleccione un año académico", new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.CursoAcademico.AñoAcademicoId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="MaestroId">Maestro</label>
                        @Html.DropDownListFor(model => model.CursoAcademico.MaestroId, new SelectList(Model.Maestros, "Id", "Nombres"), "Seleccione un maestro", new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.CursoAcademico.MaestroId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="SeccionId">Sección</label>
                        @Html.DropDownListFor(model => model.CursoAcademico.SeccionId, new SelectList(Model.Secciones, "Id", "Nombre"), "Seleccione una sección", new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.CursoAcademico.SeccionId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="AñoId">Año</label>
                        @Html.DropDownListFor(model => model.CursoAcademico.AñoId, new SelectList(Model.Años, "Id", "Nombre"), "Seleccione un año", new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.CursoAcademico.AñoId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="Activo">Activo</label>
                        @Html.CheckBoxFor(model => model.CursoAcademico.Activo, new { @class = "form-check-input" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="FechaModificacion">Fecha de Modificación</label>
                        @Html.TextBoxFor(model => model.CursoAcademico.FechaModificacion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.CursoAcademico.FechaModificacion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-2 mt-4">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <button type="button" class="btn btn-secondary" onclick="cancelOrReturn()">Regresar</button>
                </div>
            </div>
        }
    </div>
</div>
