@model IEnumerable<GestionColegios.Models.CursoAcademico>

<div class="row mt-2">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <input type="text" id="search" class="form-control" placeholder="Buscar...">
            <button id="btn-search" class="btn btn-primary">Buscar</button>
        </div>

        <table class="table table-striped table-hover">
            <thead style="background-color: #001c7d; color: white;">
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Año Académico</th>
                    <th scope="col">Sección</th>
                    <th scope="col">Maestro</th>
                    <th scope="col">Activo</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var curso in Model)
                {
                    <tr>
                        <td>@curso.Id</td>
                        <td>@curso.Nombre</td>
                        <td>@curso.AñoAcademico.Nombre</td>
                        <td>@curso.Seccion.Nombre</td>
                        <td>@curso.Maestro.Nombres</td>
                        <td>@(curso.Activo ? "Sí" : "No")</td>
                        <td>
                            <a href="@Url.Action("Edit", "CursoAcademicoWeb", new { id = curso.Id })" class="btn btn-warning">Editar</a>
                            <a href="@Url.Action("Delete", "CursoAcademicoWeb", new { id = curso.Id })" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
