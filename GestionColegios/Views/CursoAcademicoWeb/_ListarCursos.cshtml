@model GestionColegios.ViewModels.VMCursoAcademico

<div class="container mt-4">
    <!-- Tarjeta principal -->
    <div class="card shadow-lg">
        <!-- Encabezado de la tarjeta -->
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">
                <i class="bi bi-list-ul me-2"></i>Lista de Cursos Académicos
            </h3>
        </div>

        <!-- Cuerpo de la tarjeta -->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="fs-5">Nombre del Curso</th>
                            <th class="fs-5">Maestro</th>
                            <th class="fs-5">Sección</th>
                            <th class="fs-5">Año Académico</th>
                            <th class="fs-5">Año</th>
                            <th class="fs-5">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.CursoAcademicos != null && Model.CursoAcademicos.Any())
                        {
                            foreach (var curso in Model.CursoAcademicos)
                            {
                                <tr>
                                    <td class="fs-5">@Html.DisplayFor(modelItem => curso.Nombre)</td>
                                    <td class="fs-5">
                                        @($"{curso.Maestro.Nombres.Split(' ').First()} {curso.Maestro.Apellidos.Split(' ').First()}")
                                    </td>
                                    <td class="fs-5">@Html.DisplayFor(modelItem => curso.Seccion.Nombre)</td>
                                    <td class="fs-5">@Html.DisplayFor(modelItem => curso.AñoAcademico.Nombre)</td>
                                    <td class="fs-5">@Html.DisplayFor(modelItem => curso.Año.Nombre)</td>
                                    <td class="fs-5">
                                        <a href="@Url.Action("Edit", "CursoAcademicoWeb", new { id = curso.Id })" class="btn btn-sm btn-warning me-2">
                                            <i class="bi bi-pencil-square"></i><span class="fs-5">Detalles</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center fs-5 text-muted">
                                    <i class="bi bi-info-circle me-2"></i>No hay cursos registrados actualmente.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
