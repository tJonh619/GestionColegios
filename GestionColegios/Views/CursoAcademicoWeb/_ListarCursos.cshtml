@model GestionColegios.ViewModels.VMCursoAcademico

<div class="card mt-3 shadow">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title mb-0">Lista de Cursos Académicos</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="fs-5">Nombre del Curso</th>
                        <th class="fs-5">Maestro</th>
                        <th class="fs-5">Sección</th>
                        <th class="fs-5">Año Académico</th>
                        <th class="fs-5">Año</th>
                        <th class="fs-5">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var curso in Model.CursoAcademicos)
                    {
                        <tr>
                            <td class="fs-5">@Html.DisplayFor(modelItem => curso.Nombre)</td>
                            <td class="fs-5">@Html.DisplayFor(modelItem => curso.Maestro.Codigo)</td>
                            <td class="fs-5">@Html.DisplayFor(modelItem => curso.Seccion.Nombre)</td>
                            <td class="fs-5">@Html.DisplayFor(modelItem => curso.AñoAcademico.Nombre)</td>
                            <td class="fs-5">@Html.DisplayFor(modelItem => curso.Año.Id)</td>
                            <td class="fs-5">
                                <a href="@Url.Action("Edit", new { id = curso.Id })" class="btn btn-sm btn-warning me-2">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a href="@Url.Action("Delete", new { id = curso.Id })" class="btn btn-sm btn-danger px-4 py-2" onclick="return confirm('¿Estás seguro de que deseas eliminar este curso?');">
                                    <i class="bi bi-trash3-fill"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>