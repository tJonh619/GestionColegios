@model  GestionColegios.ViewModels.VMMaestros

<div class="container mt-3">
    <!-- Card principal que incluye filtros y tabla -->
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="bi bi-person-badge-fill me-2"></i>Gestión de Maestros
            </h3>
        </div>
        <div class="card-body">
            <!-- Filtros y barra de búsqueda -->
            <div class="row g-3 align-items-center mb-4">
                <!-- Filtro de búsqueda -->
                <div class="col-md-4">
                    <label for="searchType" class="form-label">Buscar por:</label>
                    <select id="searchType" class="form-select">
                        <option value="nombres">Nombres</option>
                        <option value="apellidos">Apellidos</option>
                        <option value="cedula">Cédula</option>
                        <option value="especialidad">Especialidad</option>
                        <option value="nivel">Nivel</option>
                    </select>
                </div>

                <!-- Barra de búsqueda -->
                <div class="col-md-6">
                    <label for="search" class="visually-hidden">Buscar</label>
                    <input type="text" id="search" class="form-control" placeholder="Ingrese el texto a buscar...">
                </div>

                <!-- Spinner de carga -->
                <div class="col-md-2 text-center">
                    <div id="spinner" class="spinner-border text-primary" role="status" style="display: none;">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            </div>

            <!-- Tabla de datos -->
            <div class="table-responsive">
                <table class="table table-hover align-middle table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col" class="fs-5">Código</th>
                            <th scope="col" class="fs-5">Cédula</th>
                            <th scope="col" class="fs-5">Nombres</th>
                            <th scope="col" class="fs-5">Apellidos</th>
                            <th scope="col" class="fs-5">Especialidad</th>
                            <th scope="col" class="fs-5">Fecha de Contratación</th>
                            <th scope="col" class="fs-5">Nivel</th>
                            <th scope="col" class="fs-5">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        @if (Model.Maestros != null && Model.Maestros.Any())
                        {
                            foreach (var maestro in Model.Maestros)
                            {
                                <tr>
                                    <td class="fs-5">@maestro.Codigo</td>
                                    <td class="fs-5">@maestro.Cedula</td>
                                    <td class="fs-5">@maestro.Nombres</td>
                                    <td class="fs-5">@maestro.Apellidos</td>
                                    <td class="fs-5">@maestro.Especialidad</td>
                                    <td class="fs-5">@maestro.FechaContratacion.ToString("yyyy-MM-dd")</td>
                                    <td class="fs-5">@maestro.Nivel</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "MaestrosWeb", new { id = maestro.Id })" class="btn btn-sm btn-warning me-2">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </a>
                                        <a href="@Url.Action("Delete", "MaestrosWeb", new { id = maestro.Id })" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este maestro?');">
                                            <i class="bi bi-trash3"></i> Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center fs-5 text-muted">
                                    <i class="bi bi-info-circle me-2"></i>No hay maestros registrados.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
