@model  GestionColegios.ViewModels.VMMaestros

<div class="row mt-2">
    <div class="container">
        <!-- Filtros y barra de búsqueda -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="row col-md-5">
                <label class="col-md-6" for="searchType">Buscar por:</label>
                <select id="searchType" class="form-select col-md-6">
                    <option value="nombres">Nombres</option>
                    <option value="apellidos">Apellidos</option>
                    <option value="cedula">Cédula</option>
                    <option value="especialidad">Especialidad</option>
                    <option value="nivel">Nivel</option>
                </select>
            </div>

            <div class="form-group">
                <input type="text" id="search" class="form-control" placeholder="Buscar...">
            </div>

            <div id="spinner" class="spinner-border text-primary" role="status" style="display: none;">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>

        <!-- Tabla de datos -->
        <div>
            <table style="width:100%" class="table-responsive table-striped table-hover table-bordered align-middle">
                <thead style="background-color: #001c7d; color: white;">
                    <tr>
                        <th scope="col">Código</th>
                        <th scope="col">Cédula</th>
                        <th scope="col">Nombres</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Especialidad</th>
                        <th scope="col">Fecha de Contratación</th>
                        <th scope="col">Nivel</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @foreach (var maestro in Model.Maestros)
                    {
                        <tr>
                            <td>@maestro.Codigo</td>
                            <td>@maestro.Cedula</td>
                            <td>@maestro.Nombres</td>
                            <td>@maestro.Apellidos</td>
                            <td>@maestro.Especialidad</td>
                            <td>@maestro.FechaContratacion.ToString("yyyy-MM-dd")</td>
                            <td>@maestro.Nivel</td>
                            <td>
                                <a href="@Url.Action("Edit", "MaestrosWeb", new { id = maestro.Id })" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a href="@Url.Action("Delete", "MaestrosWeb", new { id = maestro.Id })" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

