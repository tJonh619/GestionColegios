@model GestionColegios.ViewModels.VMMaestros

@{
    ViewBag.Title = "Gestionar Maestros";
}

<h2>Gestionar Maestros</h2>

<div class="container mt-1">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Navegación de Tabs -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="listar-tab" data-bs-toggle="tab" data-bs-target="#listar" type="button" role="tab" aria-controls="listar" aria-selected="true">Listar Maestros</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="crear-editar-tab" data-bs-toggle="tab" data-bs-target="#crear-editar" type="button" role="tab" aria-controls="crear-editar" aria-selected="false">Crear/Editar Maestro</button>
        </li>
    </ul>

    <!-- Contenido de las Tabs -->
    <div class="tab-content" id="myTabContent">
        <!-- Tab Listar Maestros -->
        <div class="tab-pane fade show active" id="listar" role="tabpanel" aria-labelledby="listar-tab">
            @Html.Partial("_List", Model)
        </div>

        <!-- Tab Crear/Editar -->
        <div class="tab-pane fade" id="crear-editar" role="tabpanel" aria-labelledby="crear-editar-tab">
            @Html.Partial("_Create_Edit", Model)
        </div>
    </div>
</div>
