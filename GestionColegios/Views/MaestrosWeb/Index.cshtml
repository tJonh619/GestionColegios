@model GestionColegios.ViewModels.VMMaestros

@{
    ViewBag.Title = "Gestionar Maestros";
}

<h2>Gestionar Maestros</h2>

<div class="container mt-1">

    <!-- Navegación de Tabs -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="crear-editar-tab" data-bs-toggle="tab" data-bs-target="#crear-editar" type="button" role="tab" aria-controls="crear-editar" aria-selected="true">Crear/Editar Maestro</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="listar-tab" data-bs-toggle="tab" data-bs-target="#listar" type="button" role="tab" aria-controls="listar" aria-selected="false">Listar Maestros</button>
        </li>
    </ul>

    <!-- Contenido de las Tabs -->
    <div class="tab-content" id="myTabContent">
        <!-- Tab Crear/Editar -->
        <div class="tab-pane fade show active" id="crear-editar" role="tabpanel" aria-labelledby="crear-editar-tab">
            <div class="row mt-2">
                <div class="col-md-12">
                    @using (Html.BeginForm("Create", "MaestrosWeb", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <!-- Información Personal -->
                        <div class="col-md-5 card">
                            <div class="row card" style="background-color: #001c7d">
                                <label class="m-md-1" style="color:white">
                                    <i class="fa fa-upload mr-md-2" aria-hidden="true"></i>Información Personal
                                </label>
                            </div>

                            <!-- Cédula -->
                            <div class="form-group mb-3">
                                <label for="Cedula">Cédula</label>
                                @Html.TextBoxFor(model => model.Maestro.Cedula, new { @class = "form-control", placeholder = "Ingrese la cédula" })
                                @Html.ValidationMessageFor(model => model.Maestro.Cedula, "", new { @class = "text-danger" })
                            </div>

                            <!-- Nombres -->
                            <div class="form-group mb-3">
                                <label for="Nombres">Nombres</label>
                                @Html.TextBoxFor(model => model.Maestro.Nombres, new { @class = "form-control", placeholder = "Ingrese los nombres" })
                                @Html.ValidationMessageFor(model => model.Maestro.Nombres, "", new { @class = "text-danger" })
                            </div>

                            <!-- Apellidos -->
                            <div class="form-group mb-3">
                                <label for="Apellidos">Apellidos</label>
                                @Html.TextBoxFor(model => model.Maestro.Apellidos, new { @class = "form-control", placeholder = "Ingrese los apellidos" })
                                @Html.ValidationMessageFor(model => model.Maestro.Apellidos, "", new { @class = "text-danger" })
                            </div>

                            <!-- Sexo -->
                            <div class="form-group mb-3">
                                <label for="Sexo">Sexo</label>
                                @Html.DropDownListFor(model => model.Maestro.Sexo, new SelectList(new List<string> { "Masculino", "Femenino" }), "Seleccione el sexo", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Maestro.Sexo, "", new { @class = "text-danger" })
                            </div>

                            <!-- Sexo -->
                            <div class="form-group mb-3">
                                <label for="Direccion">Direccion</label>
                                @Html.TextAreaFor(model => model.Maestro.Direccion, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Maestro.Direccion, "", new { @class = "text-danger" })
                            </div>

                            <!-- Celular -->
                            <div class="form-group mb-3">
                                <label for="Celular">Celular</label>
                                @Html.TextBoxFor(model => model.Maestro.Celular, new { @class = "form-control", placeholder = "Ingrese el celular" })
                                @Html.ValidationMessageFor(model => model.Maestro.Celular, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Información Profesional -->
                        <div class="col-md-5 card">
                            <div class="row card" style="background-color: #001c7d">
                                <label class="m-md-1" style="color:white">
                                    <i class="fa fa-upload mr-md-2" aria-hidden="true"></i>Información Profesional
                                </label>
                            </div>

                            <!-- Especialidad -->
                            <div class="form-group mb-3">
                                <label for="Especialidad">Especialidad</label>
                                @Html.TextBoxFor(model => model.Maestro.Especialidad, new { @class = "form-control", placeholder = "Ingrese la especialidad" })
                                @Html.ValidationMessageFor(model => model.Maestro.Especialidad, "", new { @class = "text-danger" })
                            </div>

                            <!-- Fecha de Contratación -->
                            <div class="form-group mb-3">
                                <label for="FechaContratacion">Fecha de Contratación</label>
                                @Html.TextBoxFor(model => model.Maestro.FechaContratacion, "{0:dd-MM-yyyy}", new { @class = "form-control", type = "date", @value = DateTime.Today.ToString("dd-MM-yyyy") })
                                @Html.ValidationMessageFor(model => model.Maestro.FechaContratacion, "", new { @class = "text-danger" })
                            </div>

                            <!-- Horario de Trabajo -->
                            <div class="form-group mb-3">
                                <label for="HorarioTrabajo">Horario de Trabajo</label>
                                @Html.DropDownListFor(model => model.Maestro.HorarioTrabajo, new SelectList(new List<string> { "Matutino", "Vespertino", "Ambos" }), "Seleccione el horario de trabajo", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Maestro.HorarioTrabajo, "", new { @class = "text-danger" })
                            </div>

                            <!-- Nivel -->
                            <div class="form-group mb-3">
                                <label for="Nivel">Nivel</label>
                                @Html.DropDownListFor(model => model.Maestro.Nivel, new SelectList(new List<string> { "Primaria", "Secundaria", "Ambos" }), "Seleccione el Nivel", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Maestro.Nivel, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Botón para registrar o editar -->
                        <div class="form-group col-md-2  mt-4">
                            <button type="submit" class="btn btn-primary">
                                @(Model.Maestro.Id == 0 ? "Registrar" : "Guardar Cambios")
                            </button>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>

        <!-- Tab Listar Maestros -->
        <div class="tab-pane fade" id="listar" role="tabpanel" aria-labelledby="listar-tab">
            <div class="row mt-2">
                <div class="container">

                    <!-- Filtros y barra de búsqueda -->
                    <div class="d-flex justify-content-between align-items-center mb-3">

                        

                        <!-- Selección del tipo de búsqueda -->
                        <div class="row col-md-5" >
                            <label class="col-md-6" for="searchType">Buscar por:</label>
                            <select id="searchType" class="form-select col-md-6">
                                <option value="nombres">Nombres</option>
                                <option value="apellidos">Apellidos</option>
                                <option value="cedula">Cédula</option>
                                <option value="especialidad">Especialidad</option>
                                <option value="nivel">Nivel</option>
                            </select>
                        </div>

                        <!-- Barra de búsqueda -->
                        <div class="form-group">
                            <input type="text" id="search" class="form-control" placeholder="Buscar...">
                        </div>

                        <!-- Spinner de carga (oculto por defecto) -->
                        <div id="spinner" class="spinner-border text-primary" role="status" style="display: none;">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </div>

                    <!-- Tabla de datos -->
                    <div>
                        <table style="width:100%" class="table-responsive table-striped table-hover table-bordered align-middle">
                            <thead style="background-color: #001c7d; color: white;">
                                <tr>
                                    <th scope="col">Código</th>
                                    <th scope="col">Cédula</th>
                                    <th scope="col">Nombres</th>
                                    <th scope="col">Apellidos</th>
                                    <th scope="col">Especialidad</th>
                                    <th scope="col">Fecha de Contratación</th>
                                    <th scope="col">Nivel</th>
                                    <th scope="col">Activo</th>
                                    <th scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="tableBody">
                                @foreach (var maestro in Model.Maestros)
                                {
                                    <tr>
                                        <td>@maestro.Codigo</td>
                                        <td>@maestro.Cedula</td>
                                        <td>@maestro.Nombres</td>
                                        <td>@maestro.Apellidos</td>
                                        <td>@maestro.Especialidad</td>
                                        <td>@maestro.FechaContratacion.ToString("yyyy-MM-dd")</td>
                                        <td>@maestro.Nivel</td>
                                        <td>
                                            @(maestro.Activo ? "Sí" : "No")
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "MaestrosWeb", new { id = maestro.Id })" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <a href="@Url.Action("Delete", "MaestrosWeb", new { id = maestro.Id })" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash-alt"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
