@model GestionColegios.Models.Matricula

@{
    ViewBag.Title = "Matrícula";
}

<div class="container-fluid" style="background-color: #f9f9f9; padding: 2rem;">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm" style="border-radius: 15px;">
                <div class="card-header text-center" style="background-color: #4A90E2; color: white; border-radius: 15px 15px 0 0;">
                    <h2 class="mb-0">Registrar Matrícula</h2>
                </div>
                <div class="card-body" style="padding: 2rem;">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-group">
                        <h4 class="mb-4">Datos de la Matrícula</h4>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.Codigo, "Código")
                                @Html.TextBoxFor(model => model.Codigo, new { @class = "form-control", placeholder = "Ingrese el código" })
                                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.Descripcion, "Descripción")
                                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = 2, placeholder = "Descripción breve" })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <h4 class="mb-4">Estado de la Matrícula</h4>
                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                @Html.LabelFor(model => model.Continuidad, "Continuidad")
                                @Html.CheckBoxFor(model => model.Continuidad, new { @class = "form-check-input" })
                                @Html.ValidationMessageFor(model => model.Continuidad, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4 mb-3">
                                @Html.LabelFor(model => model.Traslado, "Traslado")
                                @Html.CheckBoxFor(model => model.Traslado, new { @class = "form-check-input" })
                                @Html.ValidationMessageFor(model => model.Traslado, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4 mb-3">
                                @Html.LabelFor(model => model.Repitente, "Repitente")
                                @Html.CheckBoxFor(model => model.Repitente, new { @class = "form-check-input" })
                                @Html.ValidationMessageFor(model => model.Repitente, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <h4 class="mb-4">Datos del Estudiante</h4>
                        <div class="form-group">
                            <label for="EstudianteId">Estudiante</label>
                            <input type="text" class="form-control" value="@ViewBag.Estudiante.Nombres @ViewBag.Estudiante.Apellidos" readonly />
                            @Html.HiddenFor(m => m.EstudianteId)
                        </div>

                        <div class="form-group">
                            <label for="TutorId">Tutor</label>
                            <input type="text" class="form-control" value="@ViewBag.Tutor.Nombres @ViewBag.Tutor.Apellidos" readonly />
                            @Html.HiddenFor(m => m.TutorId)
                        </div>
                        <h4 class="mb-4">Periodo Académico</h4>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.PeriodosId, "Periodo")
                                @Html.DropDownList("PeriodosId", null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PeriodosId, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.AñoAcademicoId, "Año Académico")
                                @Html.DropDownList("AñoAcademicoId", null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AñoAcademicoId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <h4 class="mb-4">Aprobación</h4>
                        <div class="form-row">
                            <div class="col-md-12 mb-3">
                                @Html.LabelFor(model => model.Aprobado, "Aprobado")
                                @Html.CheckBoxFor(model => model.Aprobado, new { @class = "form-check-input" })
                                @Html.ValidationMessageFor(model => model.Aprobado, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary px-5 py-2" style="border-radius: 25px;">Guardar Matrícula</button>
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary px-5 py-2", style = "border-radius: 25px;" })
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .form-check-input {
        width: 20px;
        height: 20px;
        margin-right: 10px;
        vertical-align: middle;
        cursor: pointer;
        
    }
</style>
