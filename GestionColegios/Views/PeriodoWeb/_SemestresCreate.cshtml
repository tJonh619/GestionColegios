@model GestionColegios.ViewModels.VMAñosPeriodosSemestres

<div class="row mt-2">
    <div class="col-md-12">
        @using (Html.BeginForm(ViewBag.EsEdicion ? "EditSemestre" : "CreateSemestre", "PeriodoWeb", FormMethod.Post, new { id = "form-semestre" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Semestre.Id)

            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-md-6 card">
                    <div class="row card" style="background-color: #001c7d">
                        <label class="m-md-1" style="color:white">
                            <i class="fa fa-upload mr-md-2" aria-hidden="true"></i>Información del Semestre
                        </label>
                    </div>

                    <div class="form-group mb-3">
                        <label for="Nombre">Nombre del Semestre</label>
                        @Html.TextBoxFor(model => model.Semestre.Nombre, new
                        {
                            @class = "form-control",
                            placeholder = "Ingrese el nombre del semestre",
                            @readonly = ViewBag.EsEdicion ? "readonly" : ""
                        })
                        @Html.ValidationMessageFor(model => model.Semestre.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-2 mt-4">
                    <!-- Botones para editar o guardar cambios -->
                    <button type="button" id="btn-edit" class="btn btn-sm btn-success m-1" style="@(ViewBag.EsEdicion ? "" : "display:none;")" onclick="activateEdit()">Editar</button>

                    <button type="submit" id="btn-save" class="btn btn-primary m-1" style="@(ViewBag.EsEdicion ? "display:none;" : "")">
                        @(Model.Semestre.Id == 0 ? "Registrar" : "Guardar Cambios")
                    </button>

                    <button type="button" id="btn-cancel-edit" class="btn btn-sm btn-secondary m-1" onclick="cancelOrReturn()">Regresar</button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        // Función para activar el modo de edición
        function activateEdit() {
            $('input').prop('readonly', false); // Habilita los campos
            $('#btn-save').show(); // Muestra el botón Guardar Cambios
            $('#btn-cancel-edit').text("Cancelar"); // Cambia el texto a "Cancelar" en modo edición
            $('#btn-edit').hide(); // Oculta el botón Editar
        }

        // Función para cancelar la edición y regresar los campos a solo lectura
        function cancelOrReturn() {
            if ($('#btn-cancel-edit').text() === "Cancelar") {
                // Si está en modo edición, cancelar y revertir a solo lectura
                $('input').prop('readonly', true);
                $('#btn-save').hide();
                $('#btn-edit').show();
                $('#btn-cancel-edit').text("Regresar");
            } else {
                // Si no está en modo edición, regresar a la página anterior
                window.location.href = '@Url.Action("Index", "PeriodoWeb")'; // Cambia "Index" según la página de destino
            }
        }
    </script>
}