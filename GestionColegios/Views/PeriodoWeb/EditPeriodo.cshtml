@model GestionColegios.ViewModels.VMAñosPeriodosSemestres

@{
    ViewBag.Title = "Editar Periodo";
}

<h2>Editar Periodo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Periodo.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Periodo.Nombre)
        @Html.TextBoxFor(model => model.Periodo.Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Periodo.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Periodo.Numero)
        @Html.TextBoxFor(model => model.Periodo.Numero, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Periodo.Numero, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Periodo.AñoId)
        @Html.DropDownListFor(model => model.Periodo.AñoId, new SelectList(Model.Años, "Id", "Nombre"), "Seleccione un año", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Periodo.AñoId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Periodo.Activo)
        @Html.CheckBoxFor(model => model.Periodo.Activo)
        @Html.ValidationMessageFor(model => model.Periodo.Activo, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Periodo.FechaModificacion)
        @Html.TextBoxFor(model => model.Periodo.FechaModificacion, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.Periodo.FechaModificacion, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
}
