@model GestionColegios.ViewModels.VMAñosPeriodosSemestres

<div class="row mt-3">
    <div class="col-md-12">
        <h4 class="fs-5">Lista de Semestres</h4>
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th class="fs-5">Nombre</th>
                    <th class="fs-5">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var semestre in Model.Semestres)
                {
                <tr>
                    <td class="fs-5">@Html.DisplayFor(modelItem => semestre.Nombre)</td>
                    <td>
                        <a href="@Url.Action("EditSemestre", new { id = semestre.Id })" class="btn btn-sm btn-warning me-2">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

