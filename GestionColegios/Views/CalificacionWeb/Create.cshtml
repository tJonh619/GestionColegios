@model GestionColegios.ViewModels.VMCalificaciones
@using GestionColegios.Models

@{
    ViewBag.Title = "Registrar Notas";
}

<h2 class="text-center text-primary my-4">Registrar Notas para el Estudiante: @Model.Estudiante.Nombres @Model.Estudiante.Apellidos</h2>

@using (Html.BeginForm("Create", "CalificacionWeb", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Estudiante.Id)

    <div class="container">
        <div class="card shadow-lg p-4">
            <div class="card-body">
                <div class="mb-4">
                    <label for="anioAcademico" class="form-label">Selecciona el Año Académico</label>
                    <select id="anioAcademico" class="form-control" onchange="filterMateriasByAnio()">
                        <option value="">Seleccionar Año Académico</option>
                        @foreach (var anio in Model.AñoAcademicos)
                        {
                            <option value="@anio.Id">@anio.Nombre</option>
                        }
                    </select>
                </div>

                <div class="row">
                    <div class="col-12">
                        <table class="table table-responsive table-striped table-hover">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th>Materia</th>
                                    <th>Parcial</th>
                                    <th>Nota Cuantitativa</th>
                                    <th>Nota Cualitativa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var materia in Model.Materias)
                                {
                                    var calificacion = Model.Calificaciones.FirstOrDefault(c => c.MateriaId == materia.Id) ?? new Calificacion
                                    {
                                        EstudianteId = Model.Estudiante.Id,
                                        MateriaId = materia.Id,
                                        ParcialId = 1 // Asignar el Parcial adecuado
                                    };

                                <tr data-anio-id="@materia.AñoAcademicoId">
                                    <td>
                                        @Html.HiddenFor(m => calificacion.MateriaId) <!-- Esto está bien -->
                                        @Html.HiddenFor(m => calificacion.EstudianteId) <!-- Asegúrate de que EstudianteId esté presente -->
                                        @Html.HiddenFor(m => calificacion.ParcialId) <!-- Esto también es correcto -->
                                        <strong>@materia.Nombre</strong>
                                    </td>

                                    <td>
                                        <span class="badge bg-info">Parcial 1</span>
                                    </td>

                                    <td>
                                        @Html.TextBoxFor(m => calificacion.NCuantitativa, new
                                        {
                                            @class = "form-control",
                                            type = "number",
                                            step = "0.01",
                                            min = "0",
                                            max = "100",
                                            placeholder = "Ingrese la nota cuantitativa",
                                            oninput = "updateCualitativa(this)" // Añadido el evento oninput
                                        })
                                    </td>

                                    <td>
                                        @Html.TextBoxFor(m => calificacion.NCualitativa, new
                                        {
                                            @class = "form-control",
                                            @readonly = "readonly",
                                            placeholder = "Nota cualitativa"
                                        })
                                    </td>
                                </tr>
                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-success btn-lg px-5 py-3">Guardar Notas</button>
            </div>
        </div>
    </div>
}

<script>
    function updateCualitativa(input) {
        var cuantitativa = parseFloat(input.value);
        var cualitativa = "";

        if (cuantitativa >= 0 && cuantitativa <= 59) {
            cualitativa = "AI";
        } else if (cuantitativa >= 60 && cuantitativa <= 75) {
            cualitativa = "AF";
        } else if (cuantitativa >= 76 && cuantitativa <= 89) {
            cualitativa = "AS";
        } else if (cuantitativa >= 90 && cuantitativa <= 100) {
            cualitativa = "AA";
        }

        // Actualizar la nota cualitativa
        input.closest('tr').querySelector('[name$=".NCualitativa"]').value = cualitativa;
    }

    function filterMateriasByAnio() {
        var anioId = document.getElementById("anioAcademico").value;
        var rows = document.querySelectorAll("table tbody tr");

        rows.forEach(function (row) {
            var materiaAnio = row.getAttribute("data-anio-id");

            if (!anioId || materiaAnio == anioId) {
                row.style.display = ""; // Mostrar la fila
            } else {
                row.style.display = "none"; // Ocultar la fila
            }
        });
    }
</script>


