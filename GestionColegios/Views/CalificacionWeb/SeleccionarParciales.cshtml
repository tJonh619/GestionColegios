@model GestionColegios.ViewModels.VMCalificaciones

@{
    ViewBag.Title = "Seleccionar Parcial";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>}


@if (TempData["SuccessMessage"] != null)
{
<div class="alert alert-success mt-3">
    @TempData["SuccessMessage"]
</div>}

<div class="container mt-4">
    <!-- Card principal -->
    <div class="card shadow-sm">
        <!-- Cabecera de la card -->
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0 fs-3">
                Seleccionar Parcial para el Estudiante:
                <span class="text-warning fs-3">@Model.Estudiante.Nombres @Model.Estudiante.Apellidos</span>
            </h2>
        </div>

        <!-- Cuerpo de la card -->
        <div class="card-body">
            <!-- Lista de opciones -->
            <div class="list-group">
                <!-- Enlace para el Parcial I -->
                <a href="@Url.Action("Create", "CalificacionWeb", new { estudianteId = Model.Estudiante.Id })" class="list-group-item list-group-item-action rounded-3 mb-2 shadow-sm hover-btn fs-5">
                    <div class="d-flex justify-content-between">
                        <span>Registrar Parcial I</span>
                        <i class="bi bi-pencil-square"></i>
                    </div>
                </a>

                <!-- Enlace para el Parcial II -->
                <a href="@Url.Action("Parcial2", "CalificacionWeb", new { estudianteId = Model.Estudiante.Id })" class="list-group-item list-group-item-action rounded-3 mb-2 shadow-sm hover-btn fs-5">
                    <div class="d-flex justify-content-between">
                        <span>Registrar Parcial II</span>
                        <i class="bi bi-pencil-square"></i>
                    </div>
                </a>

                <!-- Enlace para el Parcial III -->
                <a href="@Url.Action("Parcial3", "CalificacionWeb", new { estudianteId = Model.Estudiante.Id })" class="list-group-item list-group-item-action rounded-3 mb-2 shadow-sm hover-btn fs-5">
                    <div class="d-flex justify-content-between">
                        <span>Registrar Parcial III</span>
                        <i class="bi bi-pencil-square"></i>
                    </div>
                </a>

                <!-- Enlace para el Parcial IV -->
                <a href="@Url.Action("Parcial4", "CalificacionWeb", new { estudianteId = Model.Estudiante.Id })" class="list-group-item list-group-item-action rounded-3 mb-2 shadow-sm hover-btn fs-5">
                    <div class="d-flex justify-content-between">
                        <span>Registrar Parcial IV</span>
                        <i class="bi bi-pencil-square"></i>
                    </div>
                </a>

                <!-- Enlace para ver calificaciones -->
                <a href="@Url.Action("VerCalificaciones", "CalificacionWeb", new { estudianteId = Model.Estudiante.Id })" class="list-group-item list-group-item-action rounded-3 mb-2 shadow-sm hover-btn fs-5">
                    <div class="d-flex justify-content-between">
                        <span>Ver Calificaciones</span>
                        <i class="bi bi-eye"></i>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Agregar iconos de Bootstrap para mayor interacción visual -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>

<style>
    /* Personalización de botones hover */
    .hover-btn {
        transition: all 0.3s ease-in-out;
    }

        .hover-btn:hover {
            background-color: #0056b3;
            color: white;
        }

    /* Sombra en los enlaces para que se vean más interactivos */
    .shadow-sm {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    /* Estilo para los iconos al lado de los textos */
    .bi {
        font-size: 1.2rem;
        color: #0056b3;
    }

        .bi:hover {
            color: white;
        }

    /* Margen entre elementos */
    .mb-4 {
        margin-bottom: 2rem;
    }
</style>
