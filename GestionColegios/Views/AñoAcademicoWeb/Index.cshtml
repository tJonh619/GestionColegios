@model GestionColegios.ViewModels.VMAñosAcademicos

@{
    ViewBag.Title = "Gestionar Años Académicos";
}

<style>
    .tooltip {
        display: none;
        position: absolute;
        background-color: #f9d6a8;
        border: 1px solid #f0ad4e;
        padding: 5px;
        border-radius: 5px;
        z-index: 1000;
    }

    .has-error {
        position: relative;
    }

        .has-error .tooltip {
            display: block;
        }
</style>


<div class="container mt-2" >
    <h2 class="text-center mb-4">Gestionar Años Académicos</h2>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active fs-4" id="listar-tab" data-bs-toggle="tab" data-bs-target="#listar" type="button" role="tab" aria-controls="listar" aria-selected="true">Listar Años Académicos</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link fs-4" id="crear-editar-tab" data-bs-toggle="tab" data-bs-target="#crear-editar" type="button" role="tab" aria-controls="crear-editar" aria-selected="false">Crear Año Académico</button>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane show active fade" id="listar" role="tabpanel" aria-labelledby="listar-tab">
                        @Html.Partial("_ListarAñosAcademicos", Model)
                    </div>
                    <div class="tab-pane fade" id="crear-editar" role="tabpanel" aria-labelledby="crear-editar-tab">
                        @Html.Partial("_CrearEditarAñoAcademico", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
