
@model GestionColegios.ViewModels.VMAñosAcademicos


<div class="card mt-3 shadow">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title mb-0">Lista de Años Académicos</h3>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-5 d-flex align-items-center">
                <label class="me-2 fs-5" for="searchType">Buscar por:</label>
                <select id="searchType" class="form-select">
                    <option value="nombre">Nombre</option>
                    <option value="nivel">Nivel</option>
                    <option value="estado">Estado</option>
                </select>
            </div>
            <div class="col-md-5">
                <input type="text" id="search" class="form-control" placeholder="Buscar...">
            </div>
            <div class="col-md-2 text-end">
                <div id="spinner" class="spinner-border text-primary" role="status" style="display: none;">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="fs-5">Nombre</th>
                        <th class="fs-5">Descripción</th>
                        <th class="fs-5">Nivel</th>
                        <th class="fs-5">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @foreach (var añoAcademico in Model.AñosAcademicos)
                    {
                        <tr>
                            <td class="fs-5">@añoAcademico.Nombre</td>
                            <td class="fs-5">@añoAcademico.Descripcion</td>
                            <td class="fs-5">@añoAcademico.Nivel</td>
                            <td class="fs-5">
                                <a href="@Url.Action("Edit", "AñoAcademicoWeb", new { id = añoAcademico.Id })" class="btn btn-sm btn-warning me-2">
                                    <i class="bi bi-pencil-square"></i><span class="fs-5">Detalles</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>